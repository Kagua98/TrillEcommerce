<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.TrillEcommerce">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a_love_of_thunder_katia_diamante"
        android:text="@string/cart_empty_cart_text"
        android:textColor="@color/cart_empty_title"
        android:textSize="@dimen/cart_empty_cart_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cart_empty_button_color"
        android:fontFamily="@font/colby_bold"
        android:padding="@dimen/cart_empty_cart_button_padding"
        android:drawableEnd="@drawable/ic_cart"
        android:text="@string/cart_empty_cart_button"
        android:textColor="@color/white_smoke"
        app:cornerRadius="@dimen/cart_empty_cart_button_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />


</androidx.constraintlayout.widget.ConstraintLayout>