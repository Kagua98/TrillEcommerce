<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/cart_footer_padding"
    android:theme="@style/Theme.TrillEcommerce">


    <TextView
        android:id="@+id/textTotalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/colby_bold"
        android:gravity="center"
        android:text="@string/cart_footer_total_title"
        android:textColor="@color/text_default"
        android:textSize="@dimen/cart_footer_total_title_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/colby_bold"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        tools:text="Ksh 100000"
        android:textSize="@dimen/cart_footer_total_title_size"
        app:layout_constraintBottom_toBottomOf="@id/textTotalTitle"
        app:layout_constraintStart_toEndOf="@id/textTotalTitle"
        app:layout_constraintTop_toBottomOf="@id/textTotalTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cartCheckoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cart_footer_button_margin_top"
        android:backgroundTint="@color/cart_footer_button_color"
        android:fontFamily="@font/colby_bold"
        android:padding="@dimen/cart_footer_button_checkout_padding"
        android:text="@string/cart_footer_button_checkout"
        android:textColor="@color/white_smoke"
        android:textSize="@dimen/cart_footer_button_text_size"
        app:cornerRadius="@dimen/cart_footer_button_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTotalTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>