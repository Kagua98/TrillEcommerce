<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backPressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/cart_navbar_button_back_description"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cart_navbar_title_margin"
        android:fontFamily="@font/a_love_of_thunder_katia_diamante"
        android:text="@string/cart_navbar_title"
        android:textColor="@color/cart_header_title_color"
        android:textSize="@dimen/cart_navbar_title_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backPressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/backPressed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backPressed" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/cleanCart"
        android:layout_width="@dimen/cart_navbar_clean_cart_image_size"
        android:layout_height="@dimen/cart_navbar_clean_cart_image_size"
        android:layout_marginEnd="@dimen/cart_navbar_margin_end"
        android:contentDescription="@string/cart_navbar_clean_cart_description"
        android:src="@drawable/ic_clean"
        app:layout_constraintBottom_toBottomOf="@id/backPressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backPressed" />

</androidx.constraintlayout.widget.ConstraintLayout>