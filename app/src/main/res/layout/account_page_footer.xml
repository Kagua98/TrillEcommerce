<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:layout_constraintBottom_toBottomOf="parent">


    <TextView
        android:id="@+id/matrixLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="@string/account_footer_social_description"
        android:textColor="@color/text_default"
        android:textSize="@dimen/account_footer_socials_title_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/socials_button_size"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/matrixLogo">

        <ImageView
            android:id="@+id/buttonInstagram"
            android:layout_width="@dimen/socials_button_size"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/account_footer_instagram"
            android:src="@drawable/button_social_ig" />

        <Space
            android:layout_width="@dimen/account_footer_spacer_width"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/buttonFacebook"
            android:layout_width="@dimen/socials_button_size"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/account_footer_facebook"
            android:src="@drawable/button_social_fb" />

        <Space
            android:layout_width="@dimen/account_footer_spacer_width"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/twitterButton"
            android:layout_width="@dimen/socials_button_size"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/account_footer_twitter"
            android:src="@drawable/button_social_twitter" />

        <Space
            android:layout_width="@dimen/account_footer_spacer_width"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/tiktokButton"
            android:layout_width="@dimen/socials_button_size"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/account_footer_tiktok"
            android:src="@drawable/button_social_tiktok" />

    </LinearLayout>

    <TextView
        android:id="@+id/textReadTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/colby_bold"
        android:paddingTop="10dp"
        android:text="@string/account_footer_terms_button"
        android:textColor="@color/text_link"
        android:textSize="@dimen/account_footer_tos_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>