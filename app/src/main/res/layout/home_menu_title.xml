<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/a_love_of_thunder_katia_diamante"
        android:padding="@dimen/home_categories_title_padding"
        android:text="@string/home_categories_title"
        android:textColor="@color/home_title_categories_color"
        android:textSize="@dimen/home_categories_title_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:padding="@dimen/home_categories_title_see_all_padding"
        android:text="@string/home_menu_title_hint"
        android:textColor="@color/home_title_categories_see_all_color"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seeMore"
        app:layout_constraintTop_toTopOf="@id/title" />

    <ImageView
        android:id="@+id/seeMore"
        android:layout_width="@dimen/home_categories_see_all_chevron_size"
        android:layout_height="@dimen/home_categories_see_all_chevron_size"
        android:layout_marginEnd="@dimen/home_categories_see_all_chevron_margin_end"
        android:clickable="true"
        android:contentDescription="@string/home_menu_title_hint"
        android:focusable="true"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>