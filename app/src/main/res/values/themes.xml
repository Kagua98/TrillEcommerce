<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorWindowSplashScreenBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.TrillEcommerce</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.TrillEcommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_tertiary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryOnVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_tertiary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/colby_bold</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarPositiveButtonStyle">@style/TextButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton.Negative</item>

    </style>


    <style name="MaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <item name="android:layout_height">wrap_content</item>
        <!-- Header panel -->
        <item name="materialCalendarHeaderLayout">@style/MaterialCalendar.HeaderLayout1</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/TextButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton.Negative</item>
    </style>
    <style name="MaterialCalendar.HeaderLayout1" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="TextButton.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white_smoke</item>
        <item name="backgroundTint">@color/checkout_dialog_positive_button_color</item>
    </style>

    <style name="TextButton.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/global_button_color</item>
        <item name="backgroundTint">@color/white_smoke</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border_subdued</item>
    </style>

    <style name="Theme.TrillEcommerce.BottomNav" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bottom_nav_selected_color</item>
    </style>


    <style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">20dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/progress_bar_color</item>
    </style>
    
    <style name="Theme.TrillEcommerce.Navbar" >
        <item name="android:textSize">@dimen/global_navbar_title_size</item>
        <item name="android:textColor">@color/global_navbar_title_color</item>
        <item name="android:fontFamily">@font/a_love_of_thunder_katia_diamante</item>
    </style>
</resources>